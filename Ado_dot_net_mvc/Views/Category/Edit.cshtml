@model Ado_dot_net_mvc.ViewModel.Category
@{
    ViewBag.Title = "Update";
}

<h2>Update category</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("Edit", "Category",FormMethod.Post))
        {
            <div class="form-group">
               @Html.HiddenFor(e=>e.id)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(e => e.name)
                @Html.TextBoxFor(e => e.name, new { @class = "form-control" })
                @*<label>category Name</label>
                <input type="text" class="form-control" name="name" />*@
                @Html.ValidationMessage("name", new { @class = "text-danger" })
            </div>
            <div class="form-group">

                <input type="submit" class="btn btn-info" name="btn" />
            </div>
        }
    </div>
</div>

